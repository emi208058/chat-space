.side_bar
  .side_bar__top
    .side_bar__top--items
      .side_bar__top--items--name
        = current_user.name

      .side_bar__top--items--icon
        .side_bar__top--items--icon__edit
          = link_to new_group_path do
            = icon('far','edit')

        .side_bar__top--items--icon__set
          = link_to edit_user_path(current_user) do
            = icon('fas', 'cog')    


  .side_bar__group
    - current_user.groups.each do |group|
      .side_bar__group--list
        = link_to group_messages_path(group) do
          .side_bar__group--list__name
            = group.name 
          .side_bar__group--list__message
            = group.show_last_message
    
    